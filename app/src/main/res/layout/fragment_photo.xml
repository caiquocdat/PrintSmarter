<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.homefragment.PhotoFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#AAB2FF"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:fontFamily="@font/satoshi_regular"
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Photo"
                android:textColor="#F7F7F7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
        <androidx.camera.view.PreviewView
            android:layout_below="@id/toolbar"
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/capture_button"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/photo_fragment_img_take_photo"/>
        <ImageView
            android:id="@+id/flash_button"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/img_flash"/>
        <ImageView
            android:id="@+id/turnCameraImg"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/img_turn_camera"/>
    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->


</FrameLayout>