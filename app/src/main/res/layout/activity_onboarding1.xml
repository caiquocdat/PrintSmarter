<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context=".Onboarding_1_Activity">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:src="@drawable/onboarding_1"/>
    <TextView
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/titleTv"
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Printer App &amp; Scanner
Just Print. No Setup"
        android:textSize="20sp"
        android:textColor="#111111"
        android:textAlignment="center"
        android:fontFamily="@font/satoshi_bold"/>
    <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/descripTv"
           android:text="Compatible with Canon printer"
           android:textSize="16sp"
           android:fontFamily="@font/satoshi_regular"
           android:layout_below="@id/titleTv"
           android:textAlignment="center"
           android:layout_marginTop="5dp"
           android:textColor="#111111"/>
    <ImageView
        android:layout_width="44dp"
        android:layout_height="6dp"
        android:src="@drawable/onboarding_1_dot"
        android:layout_below="@id/descripTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:background="@drawable/choose_printer_start_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textColor="#111111"
                android:textSize="18sp"
                android:fontFamily="@font/satoshi_medium"/>
            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/choose_printer_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:src="@drawable/choose_printer_next_img"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>