<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00FFFFFF"
    >
    <RelativeLayout
        android:id="@+id/rel_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/action_sheet_brg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/quickRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/podkova_medium"
                android:text="Quick print"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/line_2_rel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/quickRel"
            android:layout_marginTop="10dp"
            android:background="#D4D6E3" />

        <RelativeLayout
            android:id="@+id/sheetRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_2_rel"
            android:layout_marginTop="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/podkova_medium"
                android:text="Print multiple photos on same sheet"
                android:textColor="#000000"
                android:textSize="18sp" />


        </RelativeLayout>

        <View
            android:id="@+id/line_3_rel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/sheetRel"
            android:layout_marginTop="10dp"
            android:background="#D4D6E3" />

        <RelativeLayout
            android:id="@+id/posterRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_3_rel"
            android:layout_marginTop="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/podkova_medium"
                android:text="Print as a poster"
                android:textColor="#000000"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/zohoRel"
        android:background="#D4D6E3" />
    <RelativeLayout
        android:padding="10dp"
        android:background="@drawable/action_sheet_brg"
        android:id="@+id/cancelRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_2"
        >

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/podkova_bold"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="20sp" />


    </RelativeLayout>
</LinearLayout>



