<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.FragmentActivity">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_bar_bgr"
        android:orientation="horizontal"
        android:paddingTop="14dp"
        android:paddingBottom="15dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/chatBrg"
                android:background="@drawable/shape_item_bottom_bar_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/chatImg"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:src="@drawable/item_home_fragment" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_bottom_bar"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/exploreBrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/exploreImg"
                    android:scaleType="centerCrop"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:src="@drawable/item_scan_fragment" />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_bottom_bar"
            android:layout_weight="1"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/recentBrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/searchImg"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:src="@drawable/item_setting_fragment" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>