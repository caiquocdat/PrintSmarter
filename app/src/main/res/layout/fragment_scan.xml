<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ScanFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/satoshi_regular"
            android:textSize="32sp"
            android:text="SCAN"
            android:textColor="#AAB2FF"
            />
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:src="@drawable/scan_img_box"/>
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thereâ€™s nothing here !"
                android:fontFamily="@font/satoshi_regular"
                android:textSize="12sp"
                android:textColor="#6B7379"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap"
                    android:fontFamily="@font/satoshi_medium"
                    android:textSize="14sp"
                    android:textColor="#6B7379"/>
                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scan_add"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/scan_img_add"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to scan document"
                    android:fontFamily="@font/satoshi_medium"
                    android:textSize="14sp"
                    android:textColor="#6B7379"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/scanLinear"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scan_add"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/scan_img_add"
                />
        </LinearLayout>
        
    </RelativeLayout>

</FrameLayout>