<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.homefragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topLinear"
            android:background="#AAB2FF"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/line_img" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/AIRPRINTTv"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F7F7F7"
                android:fontFamily="@font/satoshi_bold"
                android:text="AIRPRINT"
                android:textSize="32sp"/>
            <TextView
                android:id="@+id/ADDPRINTTv"
                android:layout_below="@id/AIRPRINTTv"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F7F7F7"
                android:fontFamily="@font/satoshi_regular"
                android:text="ADD AIRPRINT"
                android:textSize="14sp"/>
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="16dp"

                android:background="@drawable/printer"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@id/ADDPRINTTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/connectTv"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="29dp"
                        android:paddingLeft="29dp"
                        android:background="@drawable/connect_yellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:text="Connect a printer"
                        android:textColor="#111111"
                        android:fontFamily="@font/satoshi_regular"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/seeMoreLinear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center"
                                android:layout_width="12dp"
                                android:layout_height="13dp"
                                android:src="@drawable/item_helptext"/>
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="See compatible list"
                                android:textColor="#111111"
                                android:fontFamily="@font/satoshi_medium"
                                android:textSize="10sp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_weight="1"
                    android:layout_width="99dp"
                    android:layout_height="58dp"
                    android:src="@drawable/item_copy"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/topLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/printTv"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHAT TO PRINT"
                android:textSize="14sp"
                android:fontFamily="@font/satoshi_regular"
                android:layout_marginLeft="16dp"
                android:textColor="#111111"/>
            <RelativeLayout
                android:id="@+id/row_1"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/printTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/photoRel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginTop="18dp"
                        android:layout_width="104dp"
                        android:layout_height="65dp"
                        android:src="@drawable/item_theme_yellow"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/home_photo_20_white"
                        android:layout_marginLeft="8dp"
                        android:layout_width="105dp"
                        android:layout_height="77dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="photo"
                            android:fontFamily="@font/satoshi_bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:src="@drawable/item_home_photo"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/emailRel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginTop="18dp"
                        android:layout_width="104dp"
                        android:layout_height="65dp"
                        android:src="@drawable/item_theme_purple"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/home_photo_20_white"
                        android:layout_marginLeft="8dp"
                        android:layout_width="105dp"
                        android:layout_height="77dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email"
                            android:fontFamily="@font/satoshi_bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_width="50dp"
                            android:layout_height="37dp"
                            android:src="@drawable/img_home_email"/>

                    </LinearLayout>
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_2"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/documentRel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginTop="18dp"
                        android:layout_width="104dp"
                        android:layout_height="65dp"
                        android:src="@drawable/item_theme_purple"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/home_photo_20_white"
                        android:layout_marginLeft="8dp"
                        android:layout_width="105dp"
                        android:layout_height="77dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="document"
                            android:fontFamily="@font/satoshi_bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:src="@drawable/img_home_document"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/webPageRel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_marginTop="18dp"
                        android:layout_width="104dp"
                        android:layout_height="65dp"
                        android:src="@drawable/item_theme_yellow"/>
                    <LinearLayout
                        android:gravity="center"
                        android:background="@drawable/home_photo_20_white"
                        android:layout_marginLeft="8dp"
                        android:layout_width="105dp"
                        android:layout_height="77dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="web page"
                            android:fontFamily="@font/satoshi_bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:src="@drawable/img_home_page"/>
                    </LinearLayout>
                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@drawable/home_photo_20_yellow"
                        android:layout_marginTop="18dp"
                        android:layout_width="206dp"
                        android:layout_height="71dp"
                        android:orientation="vertical"></LinearLayout>

                    <RelativeLayout
                        android:id="@+id/labelRel"
                        android:gravity="center"
                        android:background="@drawable/home_photo_20_white"
                        android:layout_marginLeft="8dp"
                        android:layout_width="207dp"
                        android:layout_height="81dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="label"
                            android:fontFamily="@font/satoshi_bold"
                            android:textSize="14sp"
                            android:textColor="#111111"/>
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="115dp"
                            android:layout_height="51dp"
                            android:src="@drawable/img_home_lable"/>
                    </RelativeLayout>
                </RelativeLayout>




            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>



</FrameLayout>